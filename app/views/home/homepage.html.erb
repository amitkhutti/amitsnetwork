<h3>Recent Updates<h3>
  
  <ul>
    <% @statuses.each do |status| %>
    <li><%= status.text %> <br> - <%= status.user.username %> <%= time_ago_in_words(status.created_at) %> ago</li>
    <%end%>
  </ul>
